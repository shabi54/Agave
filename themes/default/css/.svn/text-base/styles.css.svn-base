/* ----- CSS ----- */

body {
    font-family:Verdana, Arial, Helvetica, sans-serif;
    margin:0;
    padding:0;
    background:#444;
    margin-bottom:10px;
    color: 5a5a5a;
    background-image: url(../images/visibleBodyGradient.png);
    background-repeat: repeat-x;
}
a{
    color:#87B220;
    text-decoration: none;
}
    a:hover{
        color:#578200;
        text-decoration:none;
    }

/* ----- IDS ----- */

#container{
    width:780px;
    margin:0px auto;
    margin-bottom: 10px;
    padding:5px 5px 0px 0px;
    background:#fff;
    text-align:left;
}

/* ----- HEADER ----- */

#header-center {
	width: 785px;
	margin: 0px auto;
	height: 64px;
	padding-top: 10px;
	background-color: #97c230;
}
#navigation-center {
	width:785px;
	margin: 0px auto;
	height: 34px;
	background-color: #8fb724
}

#header-center h1{
    float:left;
    clear:none;
    height:40px;
    margin:0;
    padding-left:25px;
    color:#394E06;
    font-family:'Verdana';
    font-weight: bolder;
    font-size:40px;
    text-indent:2px;
    -line-height:43px;
    letter-spacing:-2px;
}
#header-center a {
	color: #578200;
}

.subContainer, #navigation ul{
    width:780px;
    margin:0 auto;    
}
#header{
    text-align:left;
    margin:0;
    height:64px;
    background:#87b220;
}
#banner{
    margin:0;
    padding:0;
    padding-bottom:5px;
    background:#e7e7e7;
}

/* ----- NAVIGATION ----- */

#navigation{
    margin:0;
    padding:0;
    background:#7fa71f;
    height:34px;
    list-style:none;
}

	#navigation li{
        float:left;
        clear:none;
        list-style:none;
    }
    #navigation li a{
        color:#fff;
        display:block;
        font-size:12px;
        text-decoration:none;
        font-weight:bold;
        padding:10px 18px;
    }
    #navigation li a:hover{
        color:#fff;
        background:#739B1F;
    }
    #active a{
        background:url('../images/nav_bg.gif');
    }

/* ----- HEADINGS ----- */

h1{
    
}
h2{
    font-weight:normal;
    color:#718e3e;
}
h3{
    font-size:15px;
    font-weight:bold;
    margin:5px 0;
    
}

/* ----- PARAGRAPHS ----- */

p{
    font-size:11px;    
    line-height:16px;
}
#primaryContent ul{
    color:#043f4a;
    font-size:11px;    
    margin:20px 0;
    list-style:none; 
}
#primaryContent li{    
    padding-left:25px;
    margin:8px 0;
    list-style:none;
    background:url('../images/content_bullet.png') left bottom no-repeat;
}

/* ----- FORMS ----- */

.fm-text, .fm-textarea, .fm-password {
	padding: 3px;
    background-color: #fafafa;
    border: 1px solid #aaa;
}
.fm-text:focus, .fm-password:focus {
	background-color: #efd;
}

.fm-button {
	text-transform: uppercase;
	text-decoration: none;
	color: #444;
	background-color: #eee;
	cursor: pointer;
	padding: 5px;
	border: 1px solid #555;
	font-size: 8px;
}

.fm-button:hover {
	background-color: #7fa71f;
	color: #fff;
}
/* ----- IMAGES ----- */

img{
    border:0;
}
img a{
    border:0;
    text-decoration:none;
}
img a:hover{
    border:none;
}

/* ----- CONTENT ----- */

#primaryContent{
    width:530px;
    padding:20px 20px;
    font-size:11px;
    float:left;
    clear:none; 
}
    #primaryContent img{
        float:right;
        clear:none;
        margin:10px;
        margin-right:0;
        padding:1px;
        border: 1px solid #E7E7E7;
    }
#secondaryContent{
    padding: 10px;
    width:180px;
    font-size:11px;
    float:right;
    clear:none; 
}
#secondaryContent h2{
    padding:11px 15px;
    margin-bottom:0;
    line-height:21px;
    font-weight:normal;
}
#secondaryContent h3{
    color:#87b220;
    margin-top:20px;
}

#errors ul{
	-border: 2px solid #882222;
	-background-color: #FCC; 
	font-size: 10px;
	color: #944;
	margin: 0px 20px 0px 20px;

}

#messages ul{
	-border: 2px solid #222222;
	-background-color: #aaa; 
	font-size: 10px;
	color: #464;
	margin: 0px 20px 0px 20px;
}

.panel {
	padding: 10px;
	background-color: #f0f0f0;
	-border: 2px solid #eaeaea;
	margin-bottom: 10px;
}
.panel h2{
	background-color: #7fa71f;
	color: #fff;
	font-weight: bolder;
	font-size: 20px;
	padding: 0;
	margin: 0;
}

/* ----- FOOTER ----- */

#footer{
    margin:0 auto;
    margin-bottom:10px;
    padding: 5px;
    clear:both;
    width:780px;
    font-size:10px;
    color:#fff;
    background:#484848;
    text-align: center;
}
    #footer ul{
        list-style:none;    
    }
    #footer li{
        list-style:none;
        display:inline;    
    }
    #footer #copyright{
        float:left;
        clear:none;
    }
    #footer #links{
        float:right;
        clear:none;
    }

/* ----- CLASSES ----- */

.clear{
    clear:both;
}

/* TABLES */
#primaryContent table {
	border-spacing: 0;
	border-collapse: collapse;
	max-width: 600px;
}
#primaryContent table th {
	text-align: center;
	background-color: #5a5a5a;
	color: #fff;
	text-transform: uppercase;
	padding: 5px;
	border: 1px solid #aaa;
	font-size: 10px;
	background-image: url(../images/white-gradient.png);
	background-repeat: repeat-x;
}

#primaryContent table tr.table-zebra {
	background-color: #f7f7f7;
}

#primaryContent table tr:hover {
	background-color: #eee;
}

#primaryContent table td {
	border: 1px solid #aaa;
	-text-align: center;
	padding: 3px;
	font-size: 10px;
}